<!doctype html>

<html lang="en">
<head>
<meta charset="utf-8">
<title>EvvvB - Main</title>
  <%- include('partials/header') %>
</head>
<body>
<!-- NOTE: ONLY USE = FOR OUTPUT!!! -->

<!-- FORMATTING BS CARDS-->
<% for(i=0; i<data.length; i++) { %>
 
  <% if((i>1) && (i%2 == 0)){ %>
    </div>
  <% } %>

  <% if(i%2 == 0){ %>
    <div class="row">
  <% } %>

  <!-- FORMAT DATE -->
  <% 
  include ('functions/dateFormat.ejs')
  let date = new Date(data[i].createdAt);
  let formattedDate = formatDate(date);
  %>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=data[i].title%> <i>Posted: <%= formattedDate %></i></h5>
        <p class="card-text"><%=data[i].body.substring(0,165)%> ...</p>
        <a href="/update/<%=data[i].id %>" class="btn btn-outline-primary">Read More</a>
      </div>
    </div>
  </div>

<% }; %>
</div> 
<!-- close last row -->
<div class="divCenter update-button">
  <a href="/update/new" >
    <button href="/update/new" type="submit" class="btn align-self-center btn-outline-success">
      Create New Update
    </button>
  </a>
</div>




  <%- include('partials/footer') %>
</body>

</html>